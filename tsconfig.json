{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
